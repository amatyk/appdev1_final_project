<div >
  <h5>
    Edit Renter Account
  </h5>

  <div>
    <form action="/modify_renter" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_renter.email %>">
      </div>
      <div>
        <label for="renter_username_box">Renter username</label>
        <input id="renter_username_box" name="query_renter_username" value="<%= @current_renter.renter_username %>">
      </div>
      <div>
        <label for="renter_comment_box">Renter comment</label>
        <textarea id="renter_comment_box" name="query_renter_comment" rows="3"><%= @current_renter.renter_comment %></textarea> 
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
