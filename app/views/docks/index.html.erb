
<div>
  <div>
    <h1>
      List of all docks
    </h1>
  </div>
</div>


<hr>

<div>
  <div>
    <h2>
      Add a new dock
    </h2>
<% if session.fetch(:owner_id) != nil%>
    <form action="/insert_dock" method="post">
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

    

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      
    
      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <button>
        Create dock
      </button>
    </form>
  </div>
</div>
<%end%>
<hr>
<div>
  <div>
    <table border="1">
      <tr>
       

        <th>
          Image
        </th>

        <th>
          Address
        </th>

        <th>
          Owner
        </th>

        <th>
          Price
        </th>

        

      
        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_docks.each do |a_dock| %>
      <tr>
       

        <td>
          <%= a_dock.image %>
        </td>

        <td>
          <%= a_dock.address %>
        </td>

        <td>
          <%= a_dock.poster.owner_username %>
        </td>

        <td>
          <%= a_dock.price %>
        </td>

        
       

        <td>
          <%= a_dock.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_dock.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_dock.updated_at) %> ago
        </td>

        <td>
          <a href="/docks/<%= a_dock.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
