<div>
  <div>
    <h1>
      List of all docks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new dock
    </h2>

    <form action="/insert_dock" method="post">
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="owner_box">
          Owner
        </label>

        <input type="text" id="owner_box" name="query_owner">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="dock_renters_box">
          Dock renters
        </label>

        <input type="text" id="dock_renters_box" name="query_dock_renters">
      </div>

      <div>
        <label for="comment_docks_box">
          Comment docks
        </label>

        <textarea id="comment_docks_box" name="query_comment_docks" rows="3"></textarea>
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <button>
        Create dock
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Address
        </th>

        <th>
          Owner
        </th>

        <th>
          Price
        </th>

        <th>
          Dock renters
        </th>

        <th>
          Comment docks
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_docks.each do |a_dock| %>
      <tr>
        <td>
          <%= a_dock.id %>
        </td>

        <td>
          <%= a_dock.image %>
        </td>

        <td>
          <%= a_dock.address %>
        </td>

        <td>
          <%= a_dock.owner %>
        </td>

        <td>
          <%= a_dock.price %>
        </td>

        <td>
          <%= a_dock.dock_renters %>
        </td>

        <td>
          <%= a_dock.comment_docks %>
        </td>

        <td>
          <%= a_dock.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_dock.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_dock.updated_at) %> ago
        </td>

        <td>
          <a href="/docks/<%= a_dock.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
